@model DiscoverySetting

<div class="container py-4">
    <h2 class="mb-4 text-primary">Edit Discovery Setting</h2>

    <div class="card shadow-lg rounded-lg border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="SettingId" />

                <div class="mb-3">
                    <label asp-for="Parameter" class="form-label fw-semibold"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="Parameter" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Value" class="form-label fw-semibold"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="Value" placeholder="Update Parameter Value" />
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-primary px-4 py-2"><i class="bi bi-save me-1"></i> Save Changes</button>
                    <a class="btn btn-secondary px-4 py-2" asp-action="Index"><i class="bi bi-x-circle me-1"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>