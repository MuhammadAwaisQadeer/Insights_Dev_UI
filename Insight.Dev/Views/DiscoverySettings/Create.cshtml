@model DiscoverySetting


<div class="container py-4">
    <h2 class="mb-4 text-primary">Create New Discovery Setting</h2>

    <div class="card shadow-lg rounded-lg border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="SettingId" class="form-label fw-semibold"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="SettingId" placeholder="Enter Setting ID" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Parameter" class="form-label fw-semibold"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="Parameter" placeholder="Enter Parameter Name" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Value" class="form-label fw-semibold"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="Value" placeholder="Enter Parameter Value" required />
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-success px-4 py-2"><i class="bi bi-plus-circle me-1"></i> Create</button>
                    <a class="btn btn-secondary px-4 py-2" asp-action="Index"><i class="bi bi-arrow-left me-1"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>