@model DiscoverySetting

<div class="container py-4">
    <h2 class="mb-4 text-primary">Setting Details</h2>

    <div class="card shadow-lg rounded-lg border-0">
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-3 fw-semibold">Setting ID:</dt>
                <dd class="col-sm-9">@Model.SettingId</dd>

                <dt class="col-sm-3 fw-semibold">Parameter:</dt>
                <dd class="col-sm-9">@Model.Parameter</dd>

                <dt class="col-sm-3 fw-semibold">Value:</dt>
                <dd class="col-sm-9">@Model.Value</dd>
            </dl>

            <div class="d-flex justify-content-end gap-3">
                <a class="btn btn-warning px-4 py-2" asp-action="Edit" asp-route-id="@Model.SettingId"><i class="bi bi-pencil-square me-1"></i> Edit</a>
                <a class="btn btn-secondary px-4 py-2" asp-action="Index"><i class="bi bi-list me-1"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>