<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Initiate Network Scan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .scan-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .scan-btn {
            width: 150px;
        }

        .progress {
            display: none;
            margin-top: 15px;
        }

        .status-completed {
            color: #28a745;
            font-weight: bold;
        }

        .status-failed {
            color: #dc3545;
            font-weight: bold;
        }

        .table th {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="scan-container">
        <h2 class="mb-4 text-primary">Initiate Network Scan</h2>

        <div class="mb-3">
            <label class="form-label">Scan Name:</label>
            <input type="text" id="scanName" class="form-control" placeholder="Enter a unique scan name">
        </div>

        <div class="mb-3">
            <label class="form-label">Network Range(s):</label>
            <textarea id="networkRange" class="form-control" rows="2" placeholder="Enter CIDR ranges (e.g., 192.168.1.0/24)"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Scan Type:</label>
            <select id="scanType" class="form-select">
                <option value="quick">Quick Scan (Fast)</option>
                <option value="full">Full Scan</option>
            </select>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary scan-btn" id="startScan">Start Scan</button>
            <button class="btn btn-secondary scan-btn" id="cancelScan">Cancel</button>
        </div>

        <div class="progress mt-3">
            <div id="scanProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;">0%</div>
        </div>

        <h3 class="mt-5 text-secondary">Recent Scans</h3>
        <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search scan name..." onkeyup="filterScans()">

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th onclick="sortTable(0)">Scan Name</th>
                        <th onclick="sortTable(1)">Network Range</th>
                        <th onclick="sortTable(2)">Status</th>
                        <th onclick="sortTable(3)">Last Run</th>
                    </tr>
                </thead>
                <tbody id="scanResults">
                    <tr><td colspan="4" class="text-center">No scans yet.</td></tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <button class="btn btn-outline-success" onclick="exportReport('csv')">Export CSV</button>
            <button class="btn btn-outline-danger" onclick="exportReport('pdf')">Export PDF</button>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            function loadRecentScans() {
                $.ajax({
                    url: "/api/scan/getScans",
                    method: "GET",
                    success: function(response) {
                        $("#scanResults").empty();
                        response.forEach(scan => {
                            let statusClass = scan.status === "Completed" ? "status-completed" : "status-failed";
                            let row = `<tr>
                                <td>${scan.scanName}</td>
                                <td>${scan.networkRange}</td>
                                <td class="${statusClass}">${scan.status}</td>
                                <td>${new Date(scan.lastRun).toLocaleString()}</td>
                            </tr>`;
                            $("#scanResults").append(row);
                        });
                    },
                    error: function() {
                        alert("Error fetching recent scans.");
                    }
                });
            }

            $("#startScan").click(function() {
                let scanName = $("#scanName").val();
                let networkRange = $("#networkRange").val();
                let scanType = $("#scanType").val();

                if (!scanName || !networkRange) {
                    alert("Please enter a scan name and network range.");
                    return;
                }

                $(".progress").show();
                $("#scanProgressBar").css("width", "0%").text("0%");
                $("#startScan").prop("disabled", true).text("Scanning...");

                startProgress();

                $.ajax({
                    url: "/api/scan/startScan",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({
                        scanName: scanName,
                        networkRange: networkRange,
                        scanType: scanType
                    }),
                    success: function(response) {
                        let statusClass = response.status === "Completed" ? "status-completed" : "status-failed";
                        let row = `<tr>
                            <td>${response.scanName}</td>
                            <td>${response.networkRange}</td>
                            <td class="${statusClass}">${response.status}</td>
                            <td>${new Date(response.lastRun).toLocaleString()}</td>
                        </tr>`;
                        $("#scanResults").prepend(row);
                        $(".progress").hide();
                        $("#startScan").prop("disabled", false).text("Start Scan");
                    },
                    error: function(xhr) {
                        alert("Error: " + xhr.responseText);
                        $(".progress").hide();
                        $("#startScan").prop("disabled", false).text("Start Scan");
                    }
                });
            });

            loadRecentScans();
        });

        function startProgress() {
            let progress = 0;
            const progressBar = $("#scanProgressBar");
            const interval = setInterval(() => {
                if (progress >= 100) {
                    clearInterval(interval);
                    return;
                }
                progress += 10;
                progressBar.css("width", progress + "%").text(progress + "%");
            }, 500);
        }

        function filterScans() {
            let input = $("#searchInput").val().toLowerCase();
            $("#scanResults tr").each(function() {
                $(this).toggle($(this).text().toLowerCase().includes(input));
            });
        }

        function sortTable(colIndex) {
            let rows = $("#scanResults tr").get();
            rows.sort((a, b) => $(a).children().eq(colIndex).text().localeCompare($(b).children().eq(colIndex).text()));
            $("#scanResults").append(rows);
        }

        function exportReport(type) {
            window.location.href = `/api/reports/export/${type}`;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
